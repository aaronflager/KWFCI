<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="~/lib/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
    <link href="~/lib/css/StyleSheet.css" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Varela' rel='stylesheet' type='text/css' />
    

</head>
<body>
    <nav class="navbar navbar-fixed navbar-default">
        <div class="container-fluid">
            <div class="row">
                <div class="kw-nav-wrapper clearfix">
                    <div class="kw-logo">
                        <a href="/">
                            <img src="~/lib/images/kw-logo.png" />
                        </a>
                    </div>
                    <div style="text-align:center;">
                        
                        <ul class="nav navbar-nav">
                            <li><a href="/">Home</a></li>
                            <li><a href="/Brokers">Brokers</a></li>
                            <li><a href="/Tasks">Tasks</a></li>
                            <li><a href="/Messages">Messages</a></li>
                            <li><a href="/Settings">Settings</a></li>
                        </ul>
                        
                    </div>
                    
                    <a href="/Auth/Logout" class="logout btn btn-default" aria-label="Left Align">
                            <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                            Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    @if(ViewBag.Critical.Count > 0)
    {
        <div class="container-fluid" id="crit-alert-bar">
            <div class="row" style="height:100%;">
                <div class="col-xs-12" style="height:100%;">
                    <span>
                        <a href="@Url.Action("AllKWTasks", "KWTasks", new { filter = "Critical"})" >
                            @if (ViewBag.Critical.Count > 1)
                            {
                                @ViewBag.Critical.Count @:Critical Alerts
                            }
                            else
                            {
                                @ViewBag.Critical.Count @:Critical Alert
                            }
                        </a>
                    </span>
                </div>

            </div>
        </div>
    }
    
        
    
    <div class="container-fluid">
        @RenderBody()
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/lib/scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/lib/scripts/customScripts.js"></script>

    <!-- DataTables search functionality, with Microsoft CDN for JQuery -->
