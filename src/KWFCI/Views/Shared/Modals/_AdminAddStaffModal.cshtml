@model KWFCI.Models.ViewModels.AdminVM

<button type="button" class="btn btn-sm btn-danger center-block" data-toggle="modal" data-target="#newStaff">New Staff</button>

<div class="modal fade" id="newStaff" tabindex="-1" role="dialog" aria-labelledby="newStaffModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 class="modal-title" id="settingsLabel">New Staff</h2>
            </div>
            <div class="modal-body">
                <form asp-controller="Admin" asp-action="AddStaff" method="post">
                    <div asp-validation-summary="All" class="text-danger center-block"></div>
                    <div class="form-group center-block">

                        <label asp-for="@Model.NewStaff.Email">Email:</label>
                        <input asp-for="@Model.NewStaff.Email" class="form-control" />

                        <label asp-for="@Model.Password">Password:</label>
                        <input asp-for="@Model.Password" class="form-control" />

                        <label asp-for="@Model.NewStaff.FirstName">First Name:</label>
                        <input asp-for="@Model.NewStaff.FirstName" class="form-control" />

                        <label asp-for="@Model.NewStaff.LastName">Last Name:</label>
                        <input asp-for="@Model.NewStaff.LastName" class="form-control" />

                        <label asp-for="@Model.NewStaff.EmailNotifications">EmailNotifications:</label>
                        <input asp-for="@Model.NewStaff.EmailNotifications" class="form-control" type="checkbox" /><br />

                        <label asp-for="@Model.NewStaff.Role">Role:</label>
                        <select class="form-control" asp-for="@Model.NewStaff.Role">
                            <option>Staff</option>
                            <option>Admin</option>
                        </select>

                        <button type="submit" class="btn btn-primary pull-right">Add Staff</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>