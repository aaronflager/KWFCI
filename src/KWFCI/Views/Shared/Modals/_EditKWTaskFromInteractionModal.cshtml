@model KWFCI.Models.ViewModels.InteractionVM


<div class="modal fade" id="editKWTaskFromInteractionModal" tabindex="-1" role="dialog" aria-labelledby="editKWTaskFromInteractionModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 class="modal-title" id="settingsLabel">Edit Alert@*<em>TODO: Use JavaScript to dynamically make this the broker name while being typed</em>*@</h2>
            </div>
            <div class="modal-body clearfix">

                <form asp-controller="Interactions" asp-action="Edit" method="post">
                    <div asp-validation-summary="All" class="text-danger center-block"></div>
                    <div class="form-group center-block modal-form">

                        <div class="row">
                            <div class="col-xs-12"><label asp-for="@Model.Task.Message">Message:</label></div>
                            <div class="col-xs-12"><textarea asp-for="@Model.Task.Message" class="form-control modal-TaskMessage"></textarea></div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3" style="width:20%;margin-top:7px;"><label asp-for="@Model.Task.DateDue">Date Due:</label></div>
                            <div class="col-xs-5"><input type="text"
                                                         data-date-start-date="@KWFCI.Helper.Today"
                                                         data-date-autoclose="true" 
                                                         data-date-clear-btn="true" 
                                                         data-date-today-highlight="true" 
                                                         data-provide="datepicker" 
                                                         asp-for="@Model.Task.DateDue" 
                                                         class="form-control modal-TaskDateDue" /></div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3" style="width:20%;margin-top:7px;"><label asp-for="@Model.Task.AlertDate">Alert Date:</label></div>
                            <div class="col-xs-5"><input type="text"
                                                         data-date-start-date="@KWFCI.Helper.Today"
                                                         data-date-end-date=""
                                                         data-date-autoclose="true" 
                                                         data-date-clear-btn="true" 
                                                         data-date-today-highlight="true" 
                                                         data-provide="datepicker" 
                                                         asp-for="@Model.Task.AlertDate" 
                                                         class="form-control modal-TaskAlertDate" /></div>
                        </div>

                        <div class="row">
                            <div class="col-xs-3" style="width:20%;margin-top:7px;"><label asp-for="@Model.Task.Priority">Priority:</label></div>
                            <div class="col-xs-2">
                                <select class="form-control modal-TaskPriority" asp-for="@Model.Task.Priority">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">Critical</option>
                                </select>
                            </div>
                        </div>

                        <input type="hidden" class="modal-TaskKWTaskID" asp-for="@Model.Task.KWTaskID" />
                        <input type="hidden" asp-for="@Model.Task.DateCreated" />
                        <input type="hidden" class="addID" asp-for="@Model.NewInteraction.InteractionID" />
                        <input type="hidden" asp-for="@Model.Field" value="NextStep" />
                        <input type="hidden" asp-for="@Model.BrokerID" />
                        <input type="hidden" name="taskAction" value="Edit" />

                        <button type="submit" class="btn btn-primary pull-right">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>