@model KWFCI.Models.Broker


<div class="modal fade" id="newBroker" tabindex="-1" role="dialog" aria-labelledby="newBrokerModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 class="modal-title" id="settingsLabel">New Broker</h2>
            </div>
            <div class="modal-body">

                <form asp-controller="Brokers" asp-action="AddBroker" method="post" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger center-block"></div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" asp-for="FirstName">First Name:</label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter first name">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3" asp-for="LastName">Last Name:</label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="LastName" class="form-control" placeholder="Enter last name">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3" asp-for="Email">Email:</label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="Email" class="form-control" placeholder="Enter email address">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3" asp-for="Type">Broker Type:</label>
                        <div class="col-sm-9">
                            <select class="form-control" asp-for="Type">
                                <option>New Broker</option>
                                <option>Broker In Transition</option>
                                <option>Transfer Broker</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-4" asp-for="EmailNotifications" >Email Notifications:</label>
                        <div >
                            <div class="checkbox center-block">
                                <input type="checkbox" asp-for="EmailNotifications" class="form-control">
                            </div>
                        </div>
                    </div>
                    <br />
                    <input class="return-url" type="hidden" name="returnURL" value="" />
                    <button type="submit" class="btn btn-primary btn-block">Create Broker</button>
                </form>
            </div>
        </div>
    </div>
</div>